# script para conectar ao banco de dados, executar uma stored procedure e gerar um arquivo de log
import pyodbc
import logging

driver = '{ODBC Driver 11 for SQL Server}'
server = 'localhost'
port = '1433'
database = 'BD_NAME'
uid = 'LOGIN'
pwd = 'PASSWORD'
command = 'EXEC [STORED_PROCEDURE];'
logpath = 'C:/Scripts/execProc.log'

connstr = f'DRIVER={driver};SERVER={server};PORT={port};DATABASE={database};UID={uid};PWD={pwd}'

logging.basicConfig(filename=logpath, filemode='a', level=logging.DEBUG, format='%(asctime)s - %(name)s - %(levelname)s - %(message)s', datefmt='%Y-%m-%d %H:%M:%S')

try:
    with pyodbc.connect(connstr) as conn:
        with conn.cursor() as proc:
            proc.execute(command)
            logging.info('Command(s) completed sucessfully')
except Exception as error:
    logging.error(f'Exception: {error}')
